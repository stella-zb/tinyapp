<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="navbar-nav">
        <% if (user) { %>
          <form method="POST" action="/logout" class="form-inline">
            <label for="loginIn">Logged In As: <%= user.email %></label>
            <button type="submit" class="btn btn-outline-dark" style="margin: 1em">Log Out</button>
          </form>
        <% } else { %>
          <form method="GET" action="/login" class="form-inline">
            <button type="submit" class="btn btn-link text-light">Login</button>
          </form>
          <form method="GET" action="/register" class="form-inline" class="nav-item nav-link">
            <button type="submit" class="btn btn-link text-light">Register</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>